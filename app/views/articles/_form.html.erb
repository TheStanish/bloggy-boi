<div class="container justify-content-center">
  <%= render 'shared/errors', obj: @article %>
   <div class="row d-flex justify-content-center">
      <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class="input-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class="input-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light mt-4" %>
          <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded mt-4", placeholder: "Description of Article" %>
          </div>
        </div>

        <div class="input-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light mt-4" %>
          <div class="form-select form-select-lg mt-4 shadow rounded" multiple aria-label="multiple select example">
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
          { prompt: "Please choose one or more categories (can be empty)" }, { multiple: true, size: 3, class: "custom-select" }) %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit class: "btn-outline-secondary btn-lg mt-4" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <%= link_to '[Cancel and Return to Articles Listing]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
