<div class="container">
  <%= render 'shared/errors', obj: @user %>
   <div class="row d-flex justify-content-center">
      <div class="col-10">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class="input-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded mb-2 mt-2", placeholder: "Enter a username" %>
          </div>
        </div>
        <div class="input-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded mb-2", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="input-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded mb-2", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit(@user.new_record? ?  "Sign Up" : "Update Account", class: "btn-outline-secondary btn-lg") %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <%= link_to '[ Cancel and Return to Articles Listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
